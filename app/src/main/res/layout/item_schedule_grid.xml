<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="?attr/selectableItemBackground">

    <TextView android:id="@+id/grid_schedule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_item_margin"
        android:textSize="@dimen/grid_item_title_text_size"
        android:typeface="normal"
        android:lines="1"/>

    <RelativeLayout android:id="@+id/rl_grid_schedule_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/grid_item_margin"
        android:layout_below="@id/grid_schedule_title"
        android:layout_alignLeft="@id/grid_schedule_title">

        <ImageView android:id="@+id/grid_schedule_period_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_access_time_20dp"
            android:scaleType="centerCrop"/>

        <TextView android:id="@+id/grid_schedule_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/grid_schedule_period_icon"
            android:layout_toRightOf="@+id/grid_schedule_period_icon"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/grid_item_text_size"/>

        <TextView android:id="@+id/grid_schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grid_schedule_period"
            android:layout_alignLeft="@id/grid_schedule_period"
            android:textSize="@dimen/grid_item_text_size"/>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/rl_grid_alarm_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/grid_item_margin"
        android:layout_below="@id/rl_grid_schedule_title"
        android:layout_alignLeft="@id/rl_grid_schedule_title">

        <ImageView android:id="@+id/grid_alarm_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_notifications_20dp"/>

        <TextView android:id="@+id/grid_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/grid_alarm_time_icon"
            android:layout_toRightOf="@+id/grid_alarm_time_icon"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/grid_item_text_size"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/grid_item_margin"
        android:layout_below="@id/rl_grid_alarm_time"
        android:layout_alignLeft="@id/rl_grid_alarm_time">

        <ImageView android:id="@+id/grid_schedule_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_label_20dp" />

        <TextView android:id="@+id/grid_schedule_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/grid_schedule_type_icon"
            android:layout_toRightOf="@+id/grid_schedule_type_icon"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/grid_item_text_size"/>

    </RelativeLayout>

</RelativeLayout>