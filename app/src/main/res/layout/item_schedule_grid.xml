<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_margin="@dimen/grid_view_margin_size"
    android:background="@drawable/schedule_item_selected_background"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/grid_view_margin_size">

        <TextView android:id="@+id/grid_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/grid_item_margin"
            android:textSize="@dimen/grid_item_title_text_size"
            android:typeface="serif"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxEms="8"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/rl_grid_schedule_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView android:id="@+id/grid_schedule_period_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_access_time_20dp"
            android:scaleType="centerCrop" />

        <TextView android:id="@+id/grid_schedule_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/grid_item_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/grid_item_margin">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"/>

        <TextView android:id="@+id/grid_schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/grid_schedule_period"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/grid_item_text_size"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/grid_item_margin">

        <ImageView android:id="@+id/grid_schedule_priority_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_grade_20dp"/>

        <TextView android:id="@+id/grid_schedule_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/grid_item_text_size"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/rl_grid_alarm_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/grid_item_margin"
        android:orientation="horizontal">

        <ImageView android:id="@+id/grid_alarm_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_notifications_20dp" />

        <TextView android:id="@+id/grid_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/grid_item_text_size"/>

    </LinearLayout>

</LinearLayout>