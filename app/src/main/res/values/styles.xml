<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowButtonStyle">@style/customMenuStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_24dp</item>
    </style>

    <style name="customMenuStyle" parent="android:Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_24dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ScheduleDetailItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/schedule_detail_item_margin</item>
        <item name="android:layout_marginRight">@dimen/schedule_detail_item_margin</item>
        <item name="android:minHeight">@dimen/schedule_detail_item_min_height</item>
    </style>

    <style name="ScheduleDetailItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/schedule_detail_item_text_size</item>
    </style>

    <style name="ScheduleDetailSwitch" parent="ScheduleDetailItem">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ScheduleDetailButton" parent="ScheduleDetailItem">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ScheduleDetailEdit" parent="ScheduleDetailItem">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ScheduleDetailIcon">
        <item name="android:layout_width">@dimen/schedule_detail_item_icon_size</item>
        <item name="android:layout_height">@dimen/schedule_detail_item_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/schedule_detail_item_margin</item>
    </style>

    <style name="ScheduleDetailText" parent="ScheduleDetailItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AlarmAlertDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@color/colorDarkGrey</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogActivity" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DialogAnimation" >
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>
